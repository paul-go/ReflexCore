// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/build": true,
		"**/bundle": true,
		"**/node_modules": true,
		"**/package-lock.json": true
	},
	"search.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/build": true,
		"**/bundle": true,
		"**/node_modules": true,
		"**/package-lock.json": true
	},
	
	// Causes annoyances with the X bundle format
	"typescript.suggest.autoImports": false,
	
	"eslint.run": "onSave"
}